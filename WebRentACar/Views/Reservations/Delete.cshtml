@model WebRentACar.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}
<style>
    /* Set background color of the whole page to light gray */
    body {
        background-color: #808080; /* Light gray color */
        color: #333; /* Ensure text color is dark enough for readability */
    }

    /* Optional: You can style the content area separately if you want a white background for better contrast */
    .container {
        background-color: #ffffff; /* White background for content area */
        padding: 20px;
        border-radius: 8px;
    }

</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class="col-sm-10">
            <a asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId">Details</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Is Approved
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsApproved)
            {
                @:Yes
            }
            else
            {
                @:No
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Index">Back to List</a>
        }
        else
        {
            <a asp-action="SeeMyReservations">Back to List</a>
        }
    </form>
</div>
