@model WebRentACar.Models.Reservation

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Set background color of the whole page to light gray */
    body {
        background-color: #808080; /* Light gray color */
        color: #333; /* Ensure text color is dark enough for readability */
    }

    /* Optional: You can style the content area separately if you want a white background for better contrast */
    .container {
        background-color: #ffffff; /* White background for content area */
        padding: 20px;
        border-radius: 8px;
    }

</style>
<h1>Create<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" /></h1>

<h4>Reservation</h4>
<Body>
    @if (TempData["FailMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["FailMessage"]
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Carid" value="@int.Parse(ViewData["CarId"].ToString())" />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Index">Back to List</a>
        }
        else
        {
            <a asp-action="SeeMyReservations">Back to List</a>
        }
</div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Popper.js (Required for Bootstrap tooltips, popovers, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</Body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
