@model IEnumerable<WebRentACar.Models.CarBrand>

@{
    ViewData["Title"] = "Delete";
}
<style>
	/* Set background color of the whole page to light gray */
	body {
		background-color: #808080; /* Light gray color */
		color: #333; /* Ensure text color is dark enough for readability */
	}

	/* Optional: You can style the content area separately if you want a white background for better contrast */
	.container {
		background-color: #ffffff; /* White background for content area */
		padding: 20px;
		border-radius: 8px;
	}

</style>
<h1>
	Delete
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</h1>

<h3>Are you sure you want to delete this?</h3>
<Body>
@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		 @TempData["SuccessMessage"]
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}   
<form asp-action="Delete">
		<div class="form-group col-md-2">
			<label for="Id">Car Brand</label>
			<select id="Id" name="Id" class="form-control">
				@foreach (var CarBrand in Model)
				{
					if(CarBrand.Id == ViewBag.id)
					{
						<option value="@CarBrand.Id" selected>@CarBrand.Name</option>
					}
					else
					{
						<option value="@CarBrand.Id" >@CarBrand.Name</option>
					}
				}

			</select>
		</div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Popper.js (Required for Bootstrap tooltips, popovers, etc.) -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</Body>