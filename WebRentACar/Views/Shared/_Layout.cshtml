<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebRentACar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRentACar.styles.css" asp-append-version="true" />
    <style>
        /* Set background color of the whole page to light gray */
        body {
            background-color: #808080; /* Light gray color */
            color: #333; /* Ensure text color is dark enough for readability */
        }

        /* Optional: You can style the content area separately if you want a white background for better contrast */
        .container {
            background-color: #ffffff; /* White background for content area */
            padding: 20px;
            border-radius: 8px;
        }

        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebRentACar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#sublistCars" aria-expanded="false" aria-controls="sublistCars">
                                Cars <span class="bi bi-caret-down-fill"></span>
                            </a>
                            <div class="collapse dropdown-menu" id="sublistCars">
                                <ul class="list-unstyled">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">See Cars</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Create">Add Car</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#sublistReservations" aria-expanded="false" aria-controls="sublistReservations">
                                Reservations <span class="bi bi-caret-down-fill"></span>
                            </a>
                            <div class="collapse dropdown-menu" id="sublistReservations">
                                <ul class="list-unstyled">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="Index">See my Reservations</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="Create">Add Reservation</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#sublistCarBrands" aria-expanded="false" aria-controls="sublistCarBrands">
                                Car Brands <span class="bi bi-caret-down-fill"></span>
                            </a>
                            <div class="collapse dropdown-menu" id="sublistCarBrands">
                                <ul class="list-unstyled">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="CarBrands" asp-action="Index">See Car Brands</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="CarBrands" asp-action="Delete">Delete Car Brand</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="CarBrands" asp-action="Create">Add Car Brand</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebRentACar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
